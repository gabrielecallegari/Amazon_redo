<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".http.model.Prodotto_dettaglio">

    <ImageView
        android:id="@+id/immagineDettaglio"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:maxWidth="180dp"
        android:maxHeight="180dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/immagineDettaglio"
        android:id="@+id/titoloDettaglio"
        tools:text="IPHONE 14"
        android:textColor="@color/black"
        android:textSize="26dp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/titoloDettaglio"
        tools:text="rsfildvalifgmaoikdlsfngdiklsnraodklsfm
        vikdlgvmfkdmlsklf cflkvcmsdklvcdfkdscaiklsdfopcklrsskrlfnsdkflsadklfnaesdlkfsdnlkfcsadlfksdoflae
        ilsfdkcsdklfmcsdlkcmsaedlkòcmsakldcsdlmcmasdlkòvcmsdlocòmsadòl"
        android:textSize="18dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:id="@+id/descrizioneDettaglio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/descrizioneDettaglio"
        android:id="@+id/prezzoProdotto"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:textColor="@color/black"
        android:textSize="30dp"
        tools:text="Prezzo:20€"
        >

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/prezzoProdotto"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:textColor="#0D5521"
        tools:text="Sconto applicato: 23,14%"
        android:id="@+id/scontoProdotto"
        >

    </TextView>

    <TextView
        android:id="@+id/infoProdotto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"
        android:text="Quantità:"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.012"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scontoProdotto">

    </TextView>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/scontoProdotto"
        app:layout_constraintEnd_toStartOf="@id/quantitaProdotto"
        android:src="@drawable/ic_baseline_remove_24"
        android:background="@drawable/rounded_button"
        android:layout_marginRight="10dp"
        android:layout_marginTop="40dp"
        android:id="@+id/removeQTA"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/scontoProdotto"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="1"
        android:id="@+id/quantitaProdotto"
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        >

    </TextView>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/scontoProdotto"
        app:layout_constraintStart_toEndOf="@+id/quantitaProdotto"
        android:src="@drawable/ic_baseline_add_24"
        android:background="@drawable/rounded_button"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:id="@+id/addQta"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/infoProdotto"
        android:layout_marginLeft="20dp"
        tools:text="Quantita disponibili"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.012"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:id="@+id/quantitaDisponibili"
        >

    </TextView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Aggiungi al carrello"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/prodottoAdd"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_24"
        android:background="@drawable/rounded_button"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="4dp"
        android:id="@+id/tornaIndietro"
        />

</androidx.constraintlayout.widget.ConstraintLayout>